@model StreetNaming.Admin.ViewModels.CaseIndexViewModel
@{
    ViewData["Title"] = "All Cases";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">All Cases</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-hover" id="table-allcases">
            <thead>
            <tr rolw="row">
                <th>Reference</th><th>Applicant</th><th>Case Type</th><th>Status</th><th>Date</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var c in Model.Cases)
            {
                <tr role="row">
                    <td>@c.CustomerReference</td><td>@c.ApplicantFullName</td><td>@c.CaseType</td><td>@c.CaseStatus</td><td>@c.CreatedDate.ToString("s")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link href="~/lib/datatables-plugins/integration/bootstrap/3/datatables.bootstrap.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/lib/datatables/media/js/jquery.datatables.min.js"></script>
    <script src="~/lib/datatables-plugins/integration/bootstrap/3/datatables.bootstrap.min.js"></script>
    <script src="~/lib/datatables-responsive/js/datatables.responsive.js"></script>
    <script>
        $(function() {
            $("#table-allcases").DataTable({
                responsive: true
            });
        });
    </script>
}